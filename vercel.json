{
    "version": 2,
    "builds": [
      { "src": "vite.config.js", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
      { "src": "app.py", "use": "@vercel/python" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/app.py" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }